

@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Attendance Monitoring System</title>
    <link rel="icon" type="image/x-icon" href="AMS-Logo.svg">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <link rel="stylesheet" href="~/Content/css/login.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.7/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
</head>
<body>
    <div id="content" class="container d-flex align-items-center min-vh-100">
        <div class="row w-100">
            <div id="img_holder" class="col-md-6 d-flex justify-content-center align-items-center">
                <img id="logo" src="@Url.Content("~/Content/Images/Group 153.png")" class="img-fluid" alt="Logo" />
            </div>
            <div id="entry_holder" class="col-md-6">
                <div class="p-5">
                    <h1 class="mb-1 text-white">Welcome!</h1>
                    <p class="mb-4 text-white">A system where students can time in for classes, and their guardians receive a real-time notification confirming their attendance.</p>
                    <form id="verifyForm" enctype="multipart/form-data" method="post">
                        <!-- Identification Number -->
                        <div class="mb-3">
                            <label for="identificationNumber" class="form-label text-white">Identification Number</label>
                            <input type="text" class="form-control identificationNumber" id="stud_id" name="stud_id" placeholder="Enter your ID">
                        </div>
                        <!-- Password -->
                        <div class="mb-5 position-relative" >
                            <label for="password" class="form-label text-white">Password</label>
                            <input type="password" class="form-control" name="stud_password" id="password" placeholder="Enter your password">
                            <div class="d-flex justify-content-between">
                                <div></div>
                                <a href="#" id="forgotpass" class="text-white position-absolute" style="right: 0; top: 35px;">Forgot Password?</a>
                            </div>                        
                        </div>
                        <!-- Login Button and Create Account Link -->
                        <div class="d-flex align-items-center">
                            <button type="submit" class="btn btn-success me-3 px-4">Login</button>
                            <a href="#" class="text-decoration-none text-white" data-toggle="modal" data-target="#registrationModal">Create an account</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <form id="createForm" enctype="multipart/form-data" method="post">
        <div class="modal fade" id="registrationModal" tabindex="-1" aria-labelledby="registrationModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="registrationModalLabel">Registration Form</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <h3 class="text-center">Student Information</h3>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group image-picker my-4">
                                    <div class="image-preview" id="imagePreview"></div>
                                    <input type="file" name="img" class="form-control-file" id="imageUpload" accept="image/*" required>
                                </div>
                                <div class="form-group my-4">
                                    <input type="text" name="guard_name" class="form-control" id="guardianName" placeholder="Guardian Name" required>
                                </div>
                                <div class="form-group my-4">
                                    <input type="text" name="guard_contact" class="form-control identificationNumber" id="contactNo" placeholder="Contact No." required>
                                </div>
                                <div class="form-group my-4">
                                    <input type="text" name="guard_rel" class="form-control" id="relationship" placeholder="Relationship to Guardian" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group my-4">
                                    <input type="text" name="stud_id" class="form-control identificationNumber" id="studentId" placeholder="Student ID" required>
                                </div>
                                <div class="form-group my-4">
                                    <input type="text" name="stud_lastname" class="form-control" id="stud_lastName" placeholder="Last Name" required>
                                </div>
                                <div class="form-group my-4">
                                    <input type="text" name="stud_firstname" class="form-control" id="stud_firstName" placeholder="First Name" required>
                                </div>
                                <div class="form-group my-4">
                                    <input type="text" name="stud_midname" class="form-control" id="stud_middleName" placeholder="Middle Name">
                                </div>
                                <div class="form-group my-4">
                                    <input type="text" name="stud_contact" class="form-control identificationNumber" id="studentContact" placeholder="Contact Number" required>
                                </div>
                                <div class="form-group my-4">
                                    <input type="password" name="stud_password" class="form-control" id="stud_password" placeholder="Password" required>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/Scripts/MyScript/auth.js"></script>
</body>
</html>




