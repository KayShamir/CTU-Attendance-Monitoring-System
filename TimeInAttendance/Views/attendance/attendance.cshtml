@{
    ViewBag.Title = "Attendance";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Attendance Monitoring System</title>
    <link rel="icon" type="image/x-icon" href="AMS-Logo.svg">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/css/login.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.7/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
</head>
<body>
    <div class="datetime" id="datetime"></div>
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-sm transparent-card">
            <div class="card-body">
                <img src="@Url.Content("~/Content/Images/AMS-Logo.svg")" class="img-fluid mx-auto d-block mb-3" style="max-width: 100px;" />                <h1 class="card-title text-center mb-4">Attendance Monitoring System</h1>
                <h4 class="text-center mb-3">@ViewBag.course_code @ViewBag.course_section</h4>
                <p class="text-center mb-4">@ViewBag.sched_date @ViewBag.sched_time</p>
                <div class="form-group mb-3 text-center">
                    <label for="identificationNumber" class="form-label">Identification Number</label>
                    <input id="idInput" type="text" class="form-control mx-auto identificationNumber" placeholder="Enter ID Number" style="max-width: 300px;">
                </div>
                <button id="record" class="btn btn-success w-100">Record Timestamp</button>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/Scripts/MyScript/attendance.js"></script>
    <script>
        function updateDateTime() {
            var now = new Date();
            var options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit', second: '2-digit' };
            var datetime = now.toLocaleString('en-US', options);
            document.getElementById('datetime').innerText = datetime;
        }

        setInterval(updateDateTime, 1000);
        updateDateTime();

        function validateIntegerInput(input) {
            input.value = input.value.replace(/[^0-9]/g, '');
        }

        $('.identificationNumber').on('input', function () {
            validateIntegerInput(this);
        })
    </script>
</body>
</html>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-image: url('@Url.Content("~/Content/Images/Group 170.png")');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        height: 100vh;
        margin: 0;
    }
    .vh-100 {
        height: 100vh;
    }
    .transparent-card {
        background-color: rgba(255, 255, 255, 0.5); /* Adjust the transparency by changing the last value (0.5) */
        border: none;
    }
    .datetime {
        margin-top: -20px;
        position: fixed;
        top: 40px;
        right: 40px;
        font-size: 16px;
        font-weight: bold;
        color: #072c12;
        padding-top: 5px;
        padding-left: 10px;
        padding-bottom: 10px;
        padding-right: 10px;
        border-radius: 10px;
        z-index: 4;
        font-weight: 300;
    }
</style>
